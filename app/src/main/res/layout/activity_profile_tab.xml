<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_tab">

    <TextView
        android:id="@+id/H1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textColor="#313133"
        android:layout_marginTop="30dp"
        android:textSize="28dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/H1"
        android:layout_alignBottom="@+id/H1"
        android:layout_marginRight="10dp"

        android:src="@drawable/edit_icon" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pfp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/H1"
        android:src="@drawable/affan_pfp"
        app:shapeAppearanceOverlay="@style/CircleShape"/>


    <TextView
        android:id="@+id/H2"
        android:layout_below="@+id/pfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Affan Ahmad"
        android:textColor="#313133"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/bio"
        android:layout_below="@+id/H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="two bananas for a pound, three bananas \nfor a euro"
        android:textColor="#313133"
        android:textSize="16dp"
        android:paddingLeft="40dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_info"
        android:layout_below="@id/bio"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="posts"
                android:layout_marginTop="-8dp"
                android:textColor="#000000"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="150dp"
            android:id="@+id/followers_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="410"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="followers"
                android:layout_marginTop="-8dp"
                android:textColor="#000000"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="250dp"
            android:id="@+id/following_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="387"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="following"
                android:layout_marginTop="-8dp"
                android:textColor="#000000"
                android:textSize="15dp"/>

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/recycler_view_posts"
        android:layout_below="@+id/profile_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/bottom_navigation"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/profile_item"
        android:background="#F0EBEB"/>


    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/home_icon"
                android:id="@+id/home_btn"
                android:alpha="0.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a7a2a9"
                android:text="Home"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/search_icon"
                android:id="@+id/search_btn"
                android:alpha="0.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a7a2a9"
                android:text="Search"/>

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/story_br"
            android:id="@+id/post_btn"
            android:padding="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/add_symbol"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/profile_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Profile"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/contact_icon"
                android:id="@+id/contact_btn"
                android:alpha="0.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a7a2a9"
                android:text="Contacts"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>