<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/pfp_frame"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/story_br">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pfp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:strokeColor="#56422A"
            app:strokeWidth="2dp"
            android:src="@drawable/affan_pfp"
            app:shapeAppearanceOverlay="@style/CircleShape"/>
    </FrameLayout>

    <TextView
        android:layout_toRightOf="@+id/pfp_frame"
        android:layout_marginTop="16dp"
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,How Are You"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/msg_d_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/msg"
        android:layout_marginRight="15dp"
        android:textSize="10dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/msg"
        android:layout_marginTop="3dp"
        android:text="10:30"
        android:alpha="0.7"/>

</RelativeLayout>