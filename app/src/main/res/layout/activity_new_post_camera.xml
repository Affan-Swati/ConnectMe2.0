<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_post_camera"
    android:background="#DEDEDE">


    <TextView
        android:id="@+id/H1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#59442F"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd = "18dp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/cross_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/H1"
        android:layout_marginStart="16dp"
        android:src="@drawable/cross_icon" />


    <ImageView
        android:id="@+id/camera_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:src="@drawable/camera_sutter_btn" />

    <ImageView
        android:id="@+id/gallery_preview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/affan_pfp"
        android:background="@drawable/rounded_brown_border"
        android:scaleType="centerCrop"
        android:padding="2dp"/>
    <ImageView
        android:id="@+id/flip_cam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="300dp"
        android:padding="5dp"
        android:background="@drawable/circle_icon_bg"
        android:src="@drawable/cam_flip_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textColor="#59442F"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:alpha="0.9"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_marginBottom="15dp"
        android:alpha="0.7"
        android:textStyle="bold"/>


</RelativeLayout>